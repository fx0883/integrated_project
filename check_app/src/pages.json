			"style": {
				"navigationBarTitleText": "首页",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/tasks/index",
			"style": {
				"navigationBarTitleText": "任务列表",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/create_task/index",
